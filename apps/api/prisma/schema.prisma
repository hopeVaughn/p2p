generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [postgis]
}

/// Registered users of the application
model User {
  id                    String         @id @default(uuid()) @db.VarChar(36)
  email                 String         @unique
  password              String
  createdAt             DateTime       @default(now())
  updatedAt             DateTime       @updatedAt
  bathrooms             Bathroom[]     @relation("createdBathrooms")
  ratedRatings          Rating[]
  reportedReports       Report[]
  userReports           UserReport[]
  roles                 UserRole[]
  verifiedVerifications Verification[]
  tokens                Token[]
}

/// Public bathrooms added by users
model Bathroom {
  id                   String         @id @default(uuid()) @db.VarChar(36)
  createdById          String?
  gender               BathroomGender
  stallType            StallType
  wheelchairAccessible Boolean
  stars                Float
  keyRequirement       Boolean
  hoursOfOperation     String
  location             Bytes?
  address              String
  createdAt            DateTime       @default(now())
  updatedAt            DateTime       @updatedAt
  createdBy            User?          @relation("createdBathrooms", fields: [createdById], references: [id])
  ratings              Rating[]
  reports              Report[]
  verifications        Verification[]

  @@index([location], map: "idx_bathroom_location")
}

/// Verification of bathroom by user
model Verification {
  id           String   @id @default(uuid()) @db.VarChar(36)
  bathroomId   String
  verifiedById String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  bathroom     Bathroom @relation(fields: [bathroomId], references: [id])
  verifiedBy   User     @relation(fields: [verifiedById], references: [id])
}

/// Rating of bathroom by user
model Rating {
  id         String   @id @default(uuid()) @db.VarChar(36)
  bathroomId String
  ratedById  String
  stars      Float
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  bathroom   Bathroom @relation(fields: [bathroomId], references: [id])
  ratedBy    User     @relation(fields: [ratedById], references: [id])
}

/// Report of false bathroom location by another user
model Report {
  id           String       @id @default(uuid()) @db.VarChar(36)
  bathroomId   String
  reportedById String
  reason       String
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  bathroom     Bathroom     @relation(fields: [bathroomId], references: [id])
  reportedBy   User         @relation(fields: [reportedById], references: [id])
  userReports  UserReport[]
}

/// Assignment of roles to users
model UserRole {
  id        String   @id @default(uuid()) @db.VarChar(36)
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      RoleName @default(USER)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UserReport {
  id        String   @id @default(uuid()) @db.VarChar(36)
  userId    String
  reportId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  report    Report   @relation(fields: [reportId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Token {
  id     String   @id @default(uuid())
  userId String
  jti    String   @unique @default(uuid())
  token  String
  expiry DateTime
  user   User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("tokens")
}

/// User roles (e.g., admin, user, super)
enum RoleName {
  SUPER
  ADMIN
  USER
}

/// Bathroom Gender Options
enum BathroomGender {
  GENDERED
  GENDER_NEUTRAL
  BOTH
}

/// Bathroom Stall Types
enum StallType {
  SINGLE_STALL
  CONNECTED
}
